# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 80
indent_size = 2
indent_style = tab
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
quote_type = double

[*.{md,markdown}]
max_line_length = 0
trim_trailing_whitespace = false